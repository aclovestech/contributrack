generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DonationType {
  TITHES
  OTHER
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  password String
  donations Donation[]
  donors    Donor[]
}

model Donor {
  id           Int        @id @default(autoincrement())
  name         String
  email        String?
  phoneNumber  String?
  address      String?
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  donations    Donation[]
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
}

model Donation {
  id           Int          @id @default(autoincrement())
  dateReceived DateTime
  amount       Float
  donationType DonationType
  donor        Donor        @relation(fields: [donorId], references: [id])
  donorId      Int
  user         User         @relation(fields: [userId], references: [id])
  userId       Int
}
