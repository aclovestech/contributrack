generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DonationType {
  TITHES
  OTHER
}

model User {
  id                  String     @id @default(uuid())
  username            String     @unique
  hashed_password     String     @map("hashed_password")
  donations           Donation[]
  donors              Donor[]

  @@map("users")
}

model Donor {
  id           String     @id @default(uuid())
  name         String     @unique
  email        String?
  phone_number String?    @map("phone_number")
  address      String?
  notes        String?
  created_at   DateTime   @default(now()) @map("created_at")
  updated_at   DateTime   @updatedAt  @map("updated_at")
  donations    Donation[]
  user         User       @relation(fields: [user_id], references: [id])
  user_id      String     @map("user_id")

  @@map("donors")
}

model Donation {
  id            String       @id @default(uuid())
  date_received DateTime     @map("date_received")
  amount        Float
  donation_type DonationType @map("donation_type")
  donor         Donor        @relation(fields: [donor_id], references: [id])
  donor_id      String       @map("donor_id")
  user          User         @relation(fields: [user_id], references: [id])
  user_id       String       @map("user_id")

  @@map("donations")
}
